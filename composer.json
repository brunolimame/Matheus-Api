{
    "name": "API",
    "description": "API",
    "type": "project",
    "authors": [
        {
            "name": "Bruno Lima",
            "email": "eu@brunolima.me"
        },
        {
            "name": "Matheus Silva",
            "email": "hofund.pro@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "slim/slim": "4.*",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "php-di/slim-bridge": "^3.1",
        "slim/twig-view": "^3.2",
        "symfony/finder": "^5.3",
        "symfony/yaml": "^5.3",
        "phpmailer/phpmailer": "^6.5",
        "respect/validation": "^2.2",
        "middlewares/trailing-slash": "^2.0",
        "doctrine/dbal": "^2.10",
        "symfony/twig-bridge": "^5.3",
        "firebase/php-jwt": "^5.4",
        "tuupola/slim-jwt-auth": "^3.5",
        "ramsey/uuid": "^4.2",
        "cocur/slugify": "^4.0",
        "sybio/image-workshop": "^2.2",
        "symfony/validator": "^5.3",
        "symfony/mime": "^5.3",
        "laminas/laminas-permissions-acl": "^2.9",
        "guzzlehttp/guzzle": "^7.4",
        "ext-dom": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Boot\\": "app/boot/",
            "Modulo\\": "app/src/",
            "Core\\": "app/src/Core/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "suggest": {
        "symfony/event-dispatcher": "^5.0",
        "swiftmailer/swiftmailer": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nunomaduro/phpinsights": "^2.8"
    }
}
